  <Target Name="ZipTemplates">
    <Message Importance="high" Text="ZIPPING TEMPLATES" />
    <ItemGroup>
      <ItemTemplates Include="$([System.IO.Directory]::GetDirectories(&quot;$(MSBuildProjectDirectory)\TemplateComposition\ItemTemplates\&quot;))" />
      <ProjectTemplate Include="$([System.IO.Directory]::GetDirectories(&quot;$(MSBuildProjectDirectory)\TemplateComposition\ProjectTemplate\&quot;))" />
    </ItemGroup>
    <processItemFolders FullPath="%(ItemTemplates.FullPath)" OutputPath="$(MSBuildProjectDirectory)\ItemTemplates">
    </processItemFolders>
    <processProjectFolders FullPath="%(ProjectTemplate.FullPath)" OutputPath="$(MSBuildProjectDirectory)\ProjectTemplates">
    </processProjectFolders>
    <Message Importance="high" Text="ZIPPING TEMPLATES COMPLETE" />
  </Target>
  <UsingTask TaskName="processItemFolders" TaskFactory="CodeTaskFactory" AssemblyFile="$(MSBuildToolsPath)\Microsoft.Build.Tasks.v4.0.dll">
    <ParameterGroup>
      <FullPath ParameterType="System.String" Required="true" />
      <OutputPath ParameterType="System.String" Required="true" />
    </ParameterGroup>
    <Task>
      <Reference Include="System.IO.Compression" />
      <Reference Include="System.IO.Compression.FileSystem" />
      <Using Namespace="System" />
      <Using Namespace="System.IO" />
      <Using Namespace="System.IO.Compression" />
      <Code Type="Fragment" Language="cs"><![CDATA[
            DirectoryInfo inputPath = new DirectoryInfo(FullPath);
            string groupName = inputPath.Name;
            
            DirectoryInfo[] templates = inputPath.GetDirectories();
            foreach(DirectoryInfo templateFolder in templates){
              string fileName = string.Format("{0}\\{1}_{2}.zip",OutputPath,groupName,templateFolder.Name).ToLower();
              
              if(File.Exists(fileName)){
                File.Delete(fileName);
              }
              FileInfo[] files = templateFolder.GetFiles();
              
              using (ZipArchive archive = ZipFile.Open(fileName,ZipArchiveMode.Create)){
                foreach(FileInfo file in files){
                  archive.CreateEntryFromFile(file.FullName,file.Name);
                }
              }
            }
         ]]></Code>
    </Task>
  </UsingTask>
