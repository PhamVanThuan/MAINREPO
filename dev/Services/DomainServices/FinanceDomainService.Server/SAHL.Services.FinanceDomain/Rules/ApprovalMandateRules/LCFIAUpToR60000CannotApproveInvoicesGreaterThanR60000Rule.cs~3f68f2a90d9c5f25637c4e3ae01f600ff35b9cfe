using SAHL.Core.Rules;
using SAHL.Core.SystemMessages;
using SAHL.Services.FinanceDomain.Managers;
using SAHL.Services.Interfaces.FinanceDomain.Model;

namespace SAHL.Services.FinanceDomain.Rules.ApprovalMandateRules
{
    public class LCFIAUpToR60000CannotApproveInvoicesGreaterThanR60000Rule : BaseApproverMandateChecker, IDomainRule<ThirdPartyInvoiceModel>
    {
        public LCFIAUpToR60000CannotApproveInvoicesGreaterThanR60000Rule(IThirdPartyInvoiceApprovalMandateProvider thirdPartyInvoiceApprovalMandateProvider)
            : base(thirdPartyInvoiceApprovalMandateProvider)
        {
        }

        public void ExecuteRule(ISystemMessageCollection systemMessages, ThirdPartyInvoiceModel ruleModel)
        {
            if(ruleModel.ApproverCurrentUserAuthenticatedCapability.Equals(LossControlFeeInvoiceApproverCapability.LossControlFeeInvoiceApproverUptoR60000, System.StringComparison.OrdinalIgnoreCase))
            {
                base.RoleMandateLimitCheck(systemMessages, ruleModel);
            }
        }
    }
}