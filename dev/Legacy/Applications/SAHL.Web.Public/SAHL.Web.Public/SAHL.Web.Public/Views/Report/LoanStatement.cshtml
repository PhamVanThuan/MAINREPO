@model SAHL.Web.Public.Models.ViewLoanStatementViewModel
@{
    ViewBag.Title = "LoanStatement";
    Layout = "~/Views/Shared/_CaseLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<h2>@Model.ReportName</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    Html.HiddenFor(m => m.ReportKey);
    <table>
        <tr>
            <td>
                <label>
                    From Date :</label>
            </td>
            <td>
                @Html.EditorFor(m => m.FromDate)
                @Html.ValidationMessageFor(m => m.FromDate)
            </td>
        </tr>
        <tr>
            <td>
                <label>
                    To Date :</label>
            </td>
            <td>
                @Html.EditorFor(m => m.ToDate)
                @Html.ValidationMessageFor(m => m.ToDate)
            </td>
        </tr>
    </table>
    
    <input type="submit" value="View Report" />
}
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<script>
    $(function () {
        $("#FromDate").val('');
        $("#ToDate").val('');
        $("#FromDate").datepicker({ dateFormat: 'yy/mm/dd' });
        $("#ToDate").datepicker({ dateFormat: 'yy/mm/dd' });
    });
</script>
