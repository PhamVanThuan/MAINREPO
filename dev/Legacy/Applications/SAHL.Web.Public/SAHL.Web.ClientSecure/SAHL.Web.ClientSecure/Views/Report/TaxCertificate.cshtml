@model SAHL.Web.ClientSecure.Models.TaxCertificteViewModel
@{
    ViewBag.Title = "Tax Certificate";
    Layout = "~/Views/Shared/_CaseLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<h2>Tax Certificate</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    Html.HiddenFor(m => m.ReportKey);
    <table>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(m => m.AccountKey, "Account Number :")
                </div>
            </td>
            <td style="vertical-align: middle">
                @Html.DropDownList("AccountKey")
                @Html.ValidationMessageFor(m => m.AccountKey)
            </td>
        </tr>
        <tr>
            <td style="width:120px">
                <div class="editor-label">
                    @Html.LabelFor(m => m.ReportFormats, "Type:")
                </div>
            </td>
            <td style="vertical-align: middle">
                @Html.DropDownListFor(m => m.ReportFormatKey, new SelectList(Model.ReportFormats, "Key", "Value"))
                @Html.ValidationMessageFor(m => m.ReportFormatKey)
            </td>
        </tr>
        <tr>
            <td style="width:210px">
                <div class="editor-label">
                    @Html.LabelFor(m => m.Year, "Tax Year ending March (YYYY) :")
                </div>
            </td>
            <td>
                @Html.EditorFor(m => m.Year)
                @Html.ValidationMessageFor(m => m.Year)
            </td>
        </tr>
    </table>
    
    <input type="submit" value="View Report" />
}
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
