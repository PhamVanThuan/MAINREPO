@model SAHL.Web.ClientSecure.Models.ViewLoanStatementViewModel
@{
    ViewBag.Title = "Loan Statement";
    Layout = "~/Views/Shared/_CaseLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<h2>Loan Statement</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    Html.HiddenFor(m => m.ReportKey);
    <table>
        <tr>
            <td style="width:120px">
                <div class="editor-label">
                    @Html.LabelFor(m => m.AccountKey, "Account Number :")
                </div>
            </td>
            <td style="vertical-align: middle">
                @Html.DropDownList("AccountKey")
                @Html.ValidationMessageFor(m => m.AccountKey)
            </td>
        </tr>
        <tr>
            <td style="width:120px">
                <div class="editor-label">
                    @Html.LabelFor(m => m.ReportFormats, "Type:")
                </div>
            </td>
            <td style="vertical-align: middle">
                @Html.DropDownListFor(m => m.ReportFormatKey, new SelectList(Model.ReportFormats, "Key", "Value"))
                @Html.ValidationMessageFor(m => m.ReportFormatKey)
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(m => m.FromDate, "From Date :")
                </div>
            </td>
            <td>
                @Html.EditorFor(m => m.FromDate)
                @Html.ValidationMessageFor(m => m.FromDate)
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(m => m.ToDate, "To Date :")
                </div>
            </td>
            <td>
                @Html.EditorFor(m => m.ToDate)
                @Html.ValidationMessageFor(m => m.ToDate)
            </td>
        </tr>
    </table>
    
    <input type="submit" value="View Report" />
}
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<script>
    $(document).ready(function () {
        $("#FromDate").val('');
        $("#ToDate").val('');
        $("#FromDate").datepicker({ dateFormat: 'yy/mm/dd' });
        $("#ToDate").datepicker({ dateFormat: 'yy/mm/dd' });
    });
</script>
