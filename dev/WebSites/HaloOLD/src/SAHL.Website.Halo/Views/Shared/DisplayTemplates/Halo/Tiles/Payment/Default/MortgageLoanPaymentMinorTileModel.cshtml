@model SAHL.Core.UI.Halo.Tiles.Payment.Default.MortgageLoanPaymentMinorTileModel

@Html.Title("Payment Details")
@Html.DisplayLabelModelPairFor("Effective Date", x => x.EffectiveDate)
@Html.DisplayLabelModelPairFor("Payment Method", x => x.PaymentMethod)
@Html.DisplayLabelModelPairFor("Payment Day", x => x.PaymentDay)
@Html.DisplayLabelModelPairFor("UserID", x => x.UserName)
@Html.DisplayLabelModelPairFor("Banking Institution", x => x.BankingInstitution)
@Html.DisplayLabelModelPairFor("Account Type", x => x.AccountType)
@Html.DisplayLabelModelPairFor("Bank Account", x => x.AccountNumber)
@Html.DisplayLabelModelPairFor("Account Holder", x => x.AccountHolderName)
@Html.DisplayLabelModelPairFor("Branch Code", x => x.BranchCode)

@if(Model.FixedDebitOrderAmount > 0)
{
    @Html.DisplayLabelModelPairFor("Fixed Debit Order Amount", x => x.FixedDebitOrderAmount)
    @Html.DisplayLabelModelPairFor("Subsidy Provider", x => x.SubsidyProvider)
    @Html.DisplayLabelModelPairFor("Subsidy Stop Order", x => x.SubsidyStopOrderAmount)
}

@Html.DisplayLabelModelPairFor("Future Dated Change Exists", x => x.FutureDatedChangeExists)